# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. See the
# GNU General Public License for more details.
#
# You should have received a copy of the GNU General Public License
# along with Pacstall. If not, see <https://www.gnu.org/licenses/>.
set packages (sed -e 's/$/\/packagelist/' /usr/share/pacstall/repo/pacstallrepo.txt | xargs -n 1 curl -s | awk '!seen[$0]++')

set -l pacstall_commands -I -Il -S -R -A -U -V -L -Up -Qi -D -T -PI -PIl -PS -PR -PA -PU -PV -PL -PUp -PQi -PD -PT
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -I -d 'Install package'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -Il -d 'Install local package'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -S -d 'Search for package'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -R -d 'Remove package'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -A -d 'Add repository'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -U -d 'Update pacstall scripts'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -V -d 'Print pacstall version'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -L -d 'List packages installed'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -Up -d 'Upgrade packages'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -Qi -d 'Get package info'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -D -d 'Downloads package'
complete -f --command pacstall -n "not __fish_seen_subcommand_from $pacstall_commands" -a -T -d 'Makes a tree of a package'

# Completion for the -I flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -I" -a "$packages"

# Completion for the -S flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -S" -a "$packages"

# Completion for the -R flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -R" -a "(/bin/ls -1aA /usr/src/pacstall/ | tr ' ' '\n')"

# Completion for the -Qi flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -Qi" -a "(/bin/ls -1aA /var/log/pacstall/metadata | tr ' ' '\n')"

# Completion for the -D flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -D" -a "$packages"

# Completion for the -Il flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -Il" -a "(find -- *.pacscript* | sed 's/.pacscript//g')"

# Completion for the -T flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -T" -a "(/bin/ls -1aA /usr/src/pacstall/ | tr ' ' '\n')"

# Completion for the -PI flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PI" -a "$packages"

# Completion for the -PS flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PS" -a "$packages"

# Completion for the -PR flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PR" -a "(/bin/ls -1aA /usr/src/pacstall/ | tr ' ' '\n')"

# Completion for the -PQi flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PQi" -a "(/bin/ls -1aA /var/log/pacstall/metadata | tr ' ' '\n')"

# Completion for the -PD flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PD" -a "$packages"

# Completion for the -PIl flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PIl" -a "(find -- *.pacscript* | sed 's/.pacscript//g')"

# Completion for the -PT flag
complete -f --command pacstall -n "__fish_seen_subcommand_from -PT" -a "(/bin/ls -1aA /usr/src/pacstall/ | tr ' ' '\n')"
# vim:set ft=sh ts=4 sw=4 noet:
